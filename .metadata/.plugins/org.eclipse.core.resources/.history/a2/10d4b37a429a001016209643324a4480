package ejercicio2;

import java.util.Scanner;

public class Ejercicio2 {

	public static void main(String[] args) {
		
		Scanner peticion = new Scanner(System.in);
		
		int numero1, numero2;
		
		System.out.println("CÁLCULOS ARIMÉTICOS");
		System.out.println("-------------------");
		System.out.println("Introduzca dos números reales:");
		
		System.out.print("Primer número: ");
		numero1 = peticion.nextByte();
		
		System.out.print("Segundo número: ");
		numero2 = peticion.nextByte();

		int doble1 = numero1 * 2;
		
		double numero2d = numero2;
		
		double mitad2 = numero2d / 2;
		
		int suma12 = numero1 + numero2;
		
		int cuatrado1mas2 = suma12 * suma12;
		
		double cuatrado1mas2d = cuatrado1mas2;
		
		double decimaDecuatrado1mas2d= cuatrado1mas2d / 10;
		
		System.out.println("RESULTADO");
		System.out.println("---------");
		System.out.println("Doble del primer número: " + doble1);
		System.out.println("Mitad del segundo número: " + mitad2);
		System.out.println("Cuadrado de la suma de ambos números: " + cuatrado1mas2);
		System.out.println("Décima parte de la suma de los cuadrados de ambos números: " +  decimaDecuatrado1mas2d);
		
	}

}
